            const resolved = document.getElementById("newIssueCheck")

            for (const item of [logbook, author]) {
                if (item.value) {
                    item.classList.remove("is-invalid")
                    item.classList.add("is-valid")
                } else {
                    item.classList.remove("is-valid")
                    item.classList.add("is-invalid")
                }
            }

            if (!htmlData) {
                logTextElement.style.border = "1px solid red"
            } else {
                logTextElement.style.border = "1px solid green"
            }

            const dataObj = {
                logbook: "",
